{
  "name": "my-pumpkin",
  "version": "1.0.0",
  "description": "Halloween Mode Theme",
  "type": "module",
  "scripts": {
    "start": "rimraf build && wp-scripts start --webpack-src-dir=src/blocks --output-path=build/blocks",
    "build": "wp-scripts build --webpack-src-dir=src/blocks --output-path=build/blocks",
    "tailwind": "npx @tailwindcss/cli -i ./src.css -o ./style.css --watch",
    "dev": "npm-run-all --parallel start tailwind"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@wordpress/scripts": "^30.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.1.2"
  }
}
